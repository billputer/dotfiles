#!/usr/bin/env zsh



# Clone zgen if you haven't already
if [[ ! -f $HOME/.zgen/zgen.zsh ]]; then
  pushd $HOME
  # add github to known_hosts
  echo 'github.com ssh-rsa ' | tee -a ~/.ssh/known_hosts
  git clone https://github.com/tarjoilija/zgen.git ~/.zgen
  popd
fi
source $HOME/.zgen/zgen.zsh

# if the init scipt doesn't exist
if ! zgen saved; then

  zgen oh-my-zsh
  zgen oh-my-zsh plugins/bundler
  zgen oh-my-zsh plugins/gem
  zgen oh-my-zsh plugins/git
  zgen oh-my-zsh plugins/github
  zgen oh-my-zsh plugins/golang
  zgen oh-my-zsh plugins/pip
  zgen oh-my-zsh plugins/python
  zgen oh-my-zsh plugins/redis-cli
  zgen oh-my-zsh plugins/rsync
  zgen oh-my-zsh plugins/sudo
  zgen oh-my-zsh plugins/vagrant

  if [ $(uname -a | grep -ci Darwin) = 1 ]; then
    # Load macos-specific plugins
    zgen oh-my-zsh plugins/macos
  fi

  if [ -f /usr/local/bin/aws_zsh_completer.sh ]; then
    zgen load /usr/local/bin/aws_zsh_completer.sh
  fi

  # If zsh-syntax-highlighting is bundled after zsh-history-substring-search,
  # they break, so get the order right.
  zgen load zsh-users/zsh-syntax-highlighting
  zgen load zsh-users/zsh-history-substring-search
  zgen load chrissicool/zsh-256color

  zgen load $HOME/.zsh/hg.zsh
  zgen load $HOME/.zsh/set-window-title.zsh
  zgen load $HOME/.zsh/billputer.zsh-theme

  # generate the init script from plugins above
  zgen save
fi
