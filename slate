#
# slate configuration
#
# https://github.com/jigish/slate
#

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Window hinting
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsDuration 5
config windowHintsSpread true
config windowHintsOrder leftToRight
config windowHintsRoundedCornerSize 10

bind e:cmd hint ASDFGQWERT

# Use hyper shortcut
alias hyper ctrl;alt;cmd

# Abstract positions
alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias lefthalf move screenOriginX;screenOriginY screenSizeX*.5;screenSizeY
alias righthalf move screenOriginX+screenSizeX*.5;screenOriginY screenSizeX*.5;screenSizeY
alias tophalf move screenOriginX;screenOriginY screenSizeX;screenSizeY*.45
alias bottomhalf move screenOriginX;screenOriginY+screenSizeY*.45 screenSizeX;screenSizeY*.55
alias center move screenOriginX+screenSizeX*.15;screenOriginY+screenSizeY*.15 screenSizeX*.7;screenSizeY*.7

# Layouts
layout 1monitor 'iTerm2':REPEAT,SORT_TITLE ${righthalf} 0
layout 1monitor 'Google Chrome' ${full} 0
layout 1monitor 'Slack' ${full} 0
layout 1monitor 'Adium':IGNORE_FAIL,TITLE_ORDER=Contacts ${lefthalf} 0 | ${center} 0
layout 1monitor 'Microsoft Outlook'  ${full} 0
layout 1monitor 'Atom':REPEAT ${lefthalf} 0
layout 1monitor 'Tweetbot' ${lefthalf} 0

layout 2monitor 'Atom':REPEAT_LAST,TITLE_ORDER_REGEX=Projects ${full} 0 | ${full} 1
layout 2monitor 'Slack' ${full} 0
layout 2monitor 'Adium':IGNORE_FAIL,TITLE_ORDER=Contacts ${lefthalf} 0 | ${center} 0
layout 2monitor 'iTerm2':REPEAT,SORT_TITLE ${righthalf} 1
layout 2monitor 'Google Chrome' ${lefthalf} 1
layout 2monitor 'Microsoft Outlook' ${full} 1
layout 2monitor 'Tweetbot' ${lefthalf} 1

layout 3monitor 'Atom':REPEAT_LAST,TITLE_ORDER_REGEX=Projects ${full} 0 | ${full} 1
layout 3monitor 'Google Chrome' ${full} 1
layout 3monitor 'Microsoft Outlook' ${full} 1
layout 2monitor 'Tweetbot' ${lefthalf} 1
layout 3monitor 'iTerm2':REPEAT,SORT_TITLE ${full} 2
layout 3monitor 'Slack' ${full} 2

# layout bindings
bind j:${hyper} layout 3monitor
bind k:${hyper} layout 2monitor
bind l:${hyper} layout 1monitor

default 1monitor count:1
default 2monitor count:2
default 3monitor count:3


# Move bindings
bind left:${hyper} ${lefthalf}
bind right:${hyper} ${righthalf}
bind up:${hyper} ${full}
bind down:${hyper} ${center}
bind ,:${hyper} throw left resize
bind .:${hyper} throw right resize
