#
# slate configuration
#
# https://github.com/jigish/slate
#

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Shows app icons and background apps, spreads icons in the same place.
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true
config windowHintsRoundedCornerSize 10

# Monitor Aliases
alias mon-laptop 1440x900
alias mon-dell 1920x1080

# Abstract positions
alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias lefthalf move screenOriginX;screenOriginY screenSizeX*.55;screenSizeY
alias righthalf move screenOriginX+screenSizeX*.55;screenOriginY screenSizeX*.45;screenSizeY
alias center move screenOriginX+screenSizeX*.15;screenOriginY+screenSizeY*.15 screenSizeX*.7;screenSizeY*.7

# Move bindings
bind m:ctrl;alt;cmd  ${full}
bind c:ctrl;alt;cmd  ${center}
bind right:ctrl;alt;cmd ${righthalf}
bind left:ctrl;alt;cmd ${lefthalf}

# Throw Bindings
bind left:ctrl;alt      throw 0
bind right:ctrl;alt     throw 1

# Window Hints
bind e:cmd hint

# Layouts
layout 1monitor 'Terminal':REPEAT,SORT_TITLE ${righthalf}
layout 1monitor 'iTerm':REPEAT,SORT_TITLE ${righthalf}
layout 1monitor 'Google Chrome' ${full}
layout 1monitor 'HipChat' ${full}
layout 1monitor 'Adium':IGNORE_FAIL,TITLE_ORDER=Contacts ${lefthalf} | ${center}
layout 1monitor 'Microsoft Outlook'  ${full}
layout 1monitor 'Sublime Text 2':REPEAT ${lefthalf}
layout 1monitors 'Tweetbot' ${lefthalf}


layout 2monitors 'Terminal':REPEAT,SORT_TITLE ${righthalf} ${mon-dell}
layout 2monitors 'iTerm':REPEAT,SORT_TITLE ${righthalf} ${mon-dell}
layout 2monitors 'Google Chrome' ${lefthalf}
layout 2monitors 'HipChat' ${full} ${mon-laptop}
layout 2monitors 'Adium':IGNORE_FAIL,TITLE_ORDER=Contacts ${lefthalf} {mon-laptop} | ${center} ${mon-laptop}
layout 2monitors 'Microsoft Outlook' ${full} ${mon-dell}
layout 2monitors 'Sublime Text 2':REPEAT ${lefthalf} ${mon-dell}
layout 2monitors 'Tweetbot' ${lefthalf} ${mon-dell}


default 1monitor resolutions:${mon-laptop}
default 2monitors resolutions:${mon-laptop};${mon-dell}

# layout binding
bind l:ctrl;alt;cmd  layout 2monitors
bind l:shift;ctrl;alt;cmd  layout 1monitor
