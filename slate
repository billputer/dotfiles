#
# slate configuration
#
# https://github.com/jigish/slate
#

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Window hinting
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsDuration 5
config windowHintsSpread true
config windowHintsOrder leftToRight
config windowHintsRoundedCornerSize 10

bind e:cmd hint ASDFGQWERT

# Use hyper shortcut
alias hyper ctrl;alt;cmd

# Monitor Aliases
alias mon-laptop 1440x900
alias mon-dell 1920x1080

# Abstract positions
alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias lefthalf move screenOriginX;screenOriginY screenSizeX*.5;screenSizeY
alias righthalf move screenOriginX+screenSizeX*.5;screenOriginY screenSizeX*.5;screenSizeY
alias tophalf move screenOriginX;screenOriginY screenSizeX;screenSizeY*.45
alias bottomhalf move screenOriginX;screenOriginY+screenSizeY*.45 screenSizeX;screenSizeY*.55
alias center move screenOriginX+screenSizeX*.15;screenOriginY+screenSizeY*.15 screenSizeX*.7;screenSizeY*.7

# Layouts
layout 1monitor 'Terminal':REPEAT,SORT_TITLE ${righthalf}
layout 1monitor 'iTerm':REPEAT,SORT_TITLE ${righthalf}
layout 1monitor 'Google Chrome' ${full}
layout 1monitor 'HipChat' ${full}
layout 1monitor 'Adium':IGNORE_FAIL,TITLE_ORDER=Contacts ${lefthalf} | ${center}
layout 1monitor 'Microsoft Outlook'  ${full}
layout 1monitor 'Sublime Text 2':REPEAT ${lefthalf}
layout 1monitor 'Atom':REPEAT ${lefthalf}
layout 1monitors 'Tweetbot' ${lefthalf}


layout 2monitors 'Terminal':REPEAT,SORT_TITLE ${righthalf} ${mon-dell}
layout 2monitors 'iTerm':REPEAT,SORT_TITLE ${righthalf} ${mon-dell}
layout 2monitors 'Google Chrome' ${lefthalf}
layout 2monitors 'HipChat' ${full} ${mon-laptop}
layout 2monitors 'Adium':IGNORE_FAIL,TITLE_ORDER=Contacts ${lefthalf} {mon-laptop} | ${center} ${mon-laptop}
layout 2monitors 'Microsoft Outlook' ${full} ${mon-dell}
layout 2monitors 'Sublime Text 2':REPEAT ${lefthalf} ${mon-dell}
layout 2monitors 'Atom':REPEAT ${lefthalf} ${mon-dell}
layout 2monitors 'Tweetbot' ${lefthalf} ${mon-dell}


layout 3monitors-base 'iTerm':REPEAT,SORT_TITLE ${full} 2
layout 3monitors-base 'Google Chrome' ${full} 1
layout 3monitors-base 'HipChat' ${full} 0
layout 3monitors-base 'Microsoft Outlook' ${full} 1
layout 3monitors-base 'Sublime Text':REPEAT ${full} 2
layout 3monitors-base 'Atom':REPEAT ${full} 2

layout 3monitors-workspace 'iTerm':REPEAT,SORT_TITLE ${full} 2
layout 3monitors-workspace 'Google Chrome' ${full} 1
layout 3monitors-workspace 'Sublime Text':REPEAT ${full} 0
layout 3monitors-workspace 'Atom':REPEAT ${full} 0


default 1monitor resolutions:${mon-laptop}
default 2monitors resolutions:${mon-laptop};${mon-dell}


# Move bindings
bind left:${hyper} ${lefthalf}
bind right:${hyper} ${righthalf}
bind up:${hyper} ${full}
bind down:${hyper} ${center}
bind ,:${hyper} throw left resize
bind .:${hyper} throw right resize

# layout binding
bind h:${hyper} layout 3monitors-base
bind j:${hyper} layout 3monitors-workspace
bind l:${hyper}  layout 2monitors
bind l:shift;${hyper}  layout 1monitor
