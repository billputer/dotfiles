<?xml version="1.0"?>
<root>
  <item>
    <name>Remap Right Command to F16</name>
    <appendix>This maps Right Command to F16 for Hammerspoon</appendix>
    <identifier>bill.rcommand_to_f16</identifier>
    <autogen>
        --KeyToKey--
        KeyCode::COMMAND_R,

        KeyCode::F16
    </autogen>
  </item>

  <item>
    <name>Remap Control + S to Control + Up</name>
    <appendix>This triggers Mission Control</appendix>
    <identifier>bill.mission_control_hotkey</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::S, ModifierFlag::CONTROL_L | ModifierFlag::NONE,,
      KeyCode::CURSOR_UP, ModifierFlag::CONTROL_L,
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::S, ModifierFlag::CONTROL_R | ModifierFlag::NONE,,
      KeyCode::CURSOR_UP, ModifierFlag::CONTROL_L,
    </autogen>
    <!-- Remap Control Shift + S to Control + S so we can continue to use it in apps -->
    <autogen>
      __KeyToKey__
      KeyCode::S, ModifierFlag::CONTROL_L | ModifierFlag::SHIFT_L,
      KeyCode::S, ModifierFlag::CONTROL_L,
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::S, ModifierFlag::CONTROL_R | ModifierFlag::SHIFT_L,
      KeyCode::S, ModifierFlag::CONTROL_L,
    </autogen>
  </item>

  <item>
    <name>Remap Middle click to Control + Up</name>
    <appendix>This triggers Mission Control</appendix>
    <identifier>bill.middle_click_to_mission_control</identifier>
    <autogen>
      __KeyToKey__
      PointingButton::MIDDLE,
      KeyCode::CURSOR_UP, ModifierFlag::CONTROL_L,
    </autogen>
  </item>

  <item>
    <name>Shortcuts for easier tab switching</name>
    <appendix>This maps Command + Control + E/R to Command + Shift + [/] for easier tab switching</appendix>
    <identifier>bill.easier_tabs</identifier>
    <autogen>
      --KeyToKey--
      KeyCode::E, ModifierFlag::COMMAND_L | ModifierFlag::CONTROL_L,
      KeyCode::BRACKET_LEFT, ModifierFlag::COMMAND_L | ModifierFlag::SHIFT_L,
    </autogen>
    <autogen>
      --KeyToKey--
      KeyCode::R, ModifierFlag::COMMAND_L | ModifierFlag::CONTROL_L,
      KeyCode::BRACKET_RIGHT, ModifierFlag::COMMAND_L | ModifierFlag::SHIFT_L,
    </autogen>
  </item>

  <item>
    <name>Use Button4 and Button5 as Back/Forward</name>
    <appendix>This maps Button4 and Button5 to Command + [/]</appendix>
    <identifier>bill.mouse_4_5_to_back_forward</identifier>
    <autogen>
      --KeyToKey--
      PointingButton::BUTTON4, ModifierFlag::NONE,
      KeyCode::BRACKET_LEFT, ModifierFlag::COMMAND_L,
    </autogen>
    <autogen>
      --KeyToKey--
      PointingButton::BUTTON5, ModifierFlag::NONE,
      KeyCode::BRACKET_RIGHT, ModifierFlag::COMMAND_L,
    </autogen>
  </item>

  <item>
    <name>Use Control + Button4 and Button5 for Tab navigation</name>
    <appendix>This maps Button4 and Button5 to Command + Shift + L</appendix>
    <identifier>bill.mouse_4_5_to_tab_nav</identifier>
    <autogen>
      --KeyToKey--
      PointingButton::BUTTON4, ModifierFlag::COMMAND_L,
      KeyCode::BRACKET_LEFT, ModifierFlag::COMMAND_L | ModifierFlag::SHIFT_L,
    </autogen>
    <autogen>
      --KeyToKey--
      PointingButton::BUTTON5, ModifierFlag::COMMAND_L,
      KeyCode::BRACKET_RIGHT, ModifierFlag::COMMAND_L | ModifierFlag::SHIFT_L,
    </autogen>
  </item>
</root>
