#
# Aliases
#
alias ls='ls --color'
alias ll='ls -l'
alias la='ls -a'

alias dm="python manage.py"

alias digg="dig +multiline +nocomments +nocmd +noquestion +nostats +search"

alias hgrep="history | grep "

# Make mkdir recursive
alias mkdir='mkdir -p'

# tmux
alias tm='tmux -u2'

# Server control
alias df='df -kH'

alias grep='grep --color=auto -I --exclude="*\.svn*"'

alias tou='top -o cpu'
alias tom='top -o vsize'

# convert newlines to LF
alias convert_newlines="perl -pi -e 's/\r\n/\n/g'"

# LP-specific aliases
alias -g wa='~/workspace/lp-app'
alias -g wd='~/workspace/lp-devops'
alias lpa='lp-assume-role admin'
alias lpo='lp-assume-role ops'
alias lpd='lp-assume-role dev'

# ansible playbook
alias ap-local='ansible-playbook -i /workspace/lp-devops/inventories/local /workspace/lp-devops/development.yml'
alias ap-frontier='ansible-playbook -i /workspace/lp-devops/inventories/frontier /workspace/lp-devops/lp-app.yml'
alias ap-demo='ansible-playbook -i /workspace/lp-devops/inventories/demo /workspace/lp-devops/lp-app.yml'
alias ap-infra='ansible-playbook -i /workspace/lp-devops/inventories/infrastructure /workspace/lp-devops/infrastructure.yml'

alias ap-dogfood='ansible-playbook -i /workspace/lp-devops/inventories/aws/dogfood.py /workspace/lp-devops/lp-app.yml'
alias ap-staging='ansible-playbook -i /workspace/lp-devops/inventories/aws/staging.py /workspace/lp-devops/lp-app.yml'
alias ap-prod='ansible-playbook -i /workspace/lp-devops/inventories/aws/production.py /workspace/lp-devops/lp-app.yml'

# ansible shell
alias as-frontier='ansible -i /workspace/lp-devops/inventories/frontier all -m shell -a'
alias as-demo='ansible -i /workspace/lp-devops/inventories/demo all -m shell -a'
alias as-infra='ansible -i /workspace/lp-devops/inventories/infrastructure all -m shell -a'

alias as-dogfood='ansible -i /workspace/lp-devops/inventories/aws/dogfood.py all -m shell -a'
alias as-staging='ansible -i /workspace/lp-devops/inventories/aws/staging.py all -m shell -a'
alias as-prod='ansible -i /workspace/lp-devops/inventories/aws/production.py all -m shell -a'

# mercurial

alias hgsl='hg shelve --list'
alias hgsp='hg shelve --patch'
alias hgsd='hg shelve --delete'

# SVN
alias sco='svn co'
alias sup='svn up'
alias sci='svn ci -m'
alias saa='svn status | grep "^\?" | awk "{print \$2}" | xargs svn add'
alias scleann="svn status --no-ignore | grep '^\?' | sed 's/^\?      //'  | xargs rm -rf"
alias slog="python ~/.files/bin/svnlog.py"
alias smm='svn merge "^/www/branches/maint" -c'
alias smf='svn merge "^/www/branches/factory" -c'
alias sdif='svn diff'

# horse ebooks
alias horse="while true; do curl -s http://horseebooksipsum.com/api/v1/ | say; done;"

# yolo
alias git-yolo='git commit -am "`curl -s http://whatthecommit.com/index.txt`"'

# be quiet
alias -g quietly='> /dev/null 2>&1'

# serveit
alias serveit='python -m SimpleHTTPServer'

# sl
alias sl='~/.files/bin/sl.sh'

# sudo switch user with zsh shell
alias sudosuz='sudo -E su --shell /usr/bin/zsh'

# vagrant
alias vup='vagrant up'
alias vupno='vagrant up --no-provision'
alias vre='vagrant halt && vagrant up --no-provision'
alias vh='vagrant halt'
alias vp='vagrant provision'
alias vsh='vagrant ssh'
alias vst='vagrant status'
alias vgst='vagrant global-status'
