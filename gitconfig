[user]
  name = Bill Wiens
  email = billwiens@gmail.com

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto

[merge]
  summary = true

[github]
  user = billputer

[alias]
  st = status
  ci = commit
  co = checkout
  br = branch
  staged = diff --cached
  unstaged = diff
  both = diff HEAD
  oneline = log --pretty=oneline
  amend = commit --amend
  out = log origin..HEAD
  pushup = push --set-upstream origin

  # pretty logs
  ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  lol = log --graph --decorate --pretty=oneline --abbrev-commit

  # log for particular file
  fl = log -u

  # show branches by latest changes
  latest = for-each-ref --count=10 --sort=-committerdate --format='%(committerdate:short) %(refname:short)'

  # show modified files in last commit
  dl = "!git ll -1"
  # diff last commit
  dlc = diff --cached HEAD^

  # find a file in codebase
  f = "!git ls-files | grep -i"

  # assume (for files changed locally)
  assume = update-index --assume-unchanged
  unassume = update-index --no-assume-unchanged
  assumed = "!git ls-files -v | grep ^h | cut -c 3-"

  # list aliases
  la = "!git config -l | grep alias | cut -c 7-"
  
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  editor = $EDITOR
  pager = less -F -X

# uncomment for git >= 1.8
#[push]
#  default = simple
[push]
  default = current
[help]
	autocorrect = 1
